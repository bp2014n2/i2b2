<div id="gender_pichart" class="rplot">
  <!-- Title -->
  <h2 contentEditable>Gender</h2>
  <p contentEditable>Click here to add description</p>

  <div class="plot"></div><br>

  <div class="concept"></div>
  <button class="reloadButton">Reload</button></span>
</div>

<script>
setTimeout(function(){ 

  // Config
  var diagram = 'gender_pichart'
  params[diagram] = {
        "width": 8,
        "height": 5
      }

  // Reload function
  document.querySelector("#"+diagram+" .reloadButton").addEventListener("click", function() {
    updatePlot(diagram, params[diagram]) 
  })

  // Initial load
  updatePlot(diagram, params[diagram])

}, 100)
</script>
